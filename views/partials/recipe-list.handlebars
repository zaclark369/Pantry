<div class="recipe-categories">
  {{#each recipeData}}
{{#if recipeCategory}}
  <button type="button" class="btn btn-primary">{{recipeCategory}}</button>
{{/if}}
  {{/each}}
</div>

{{#each recipeData}}
<div class="card m-3" style="width: 10rem;">
  {{#if image}}
  <img class="card-img-top" src={{image.[0]}} src={{image}} alt={{name}}>
  {{/if}}
  <div class="card-body">
    <h5 class="card-title">{{name}}</h5>
    {{!-- <p class="card-text">{{description}}</p> --}}
    <a href={{url}} class="btn btn-primary">View Recipe</a>
  </div>
</div>
{{/each}}